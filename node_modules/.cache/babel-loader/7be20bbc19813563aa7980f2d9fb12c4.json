{"ast":null,"code":"import Store from \"../store\";\nexport default {\n  name: \"CalendarEntry\",\n\n  data() {\n    return {\n      eventColors: [\"primary\", \"success\", \"info\", \"warning\", \"danger\"],\n      event: {\n        title: \"\",\n        color: \"primary\",\n        priority: 0\n      }\n    };\n  },\n\n  computed: {\n    activeDayName() {\n      return Store.getters.activeDay().fullName;\n    }\n\n  },\n  methods: {\n    eventColorClasses(eventColor) {\n      return [\"alert-\" + eventColor, this.event.color === eventColor ? \"border border-\" + this.event.color : \"\"];\n    },\n\n    setEventColor(eventColor) {\n      this.event.color = eventColor;\n    },\n\n    submitEvent() {\n      Store.mutations.storeEvent(this.event);\n      this.event = {\n        title: \"\",\n        color: \"primary\",\n        priority: 0\n      };\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA4CA,OAAOA,KAAP,MAAkB,UAAlB;AAEA,eAAe;EACbC,IAAI,EAAE,eADO;;EAEbC,IAAI,GAAG;IACL,OAAO;MACLC,WAAW,EAAE,CAAC,SAAD,EAAY,SAAZ,EAAuB,MAAvB,EAA+B,SAA/B,EAA0C,QAA1C,CADR;MAELC,KAAK,EAAE;QACLC,KAAK,EAAE,EADF;QAELC,KAAK,EAAE,SAFF;QAGLC,QAAQ,EAAE;MAHL;IAFF,CAAP;EAQD,CAXY;;EAYbC,QAAQ,EAAE;IACRC,aAAa,GAAG;MACd,OAAOT,KAAK,CAACU,OAAN,CAAcC,SAAd,GAA0BC,QAAjC;IACD;;EAHO,CAZG;EAkBbC,OAAO,EAAE;IACPC,iBAAiB,CAACC,UAAD,EAAa;MAC5B,OAAO,CACL,WAAWA,UADN,EAEL,KAAKX,KAAL,CAAWE,KAAX,KAAqBS,UAArB,GACI,mBAAmB,KAAKX,KAAL,CAAWE,KADlC,GAEI,EAJC,CAAP;IAMD,CARM;;IASPU,aAAa,CAACD,UAAD,EAAa;MACxB,KAAKX,KAAL,CAAWE,KAAX,GAAmBS,UAAnB;IACD,CAXM;;IAYPE,WAAW,GAAG;MACZjB,KAAK,CAACkB,SAAN,CAAgBC,UAAhB,CAA2B,KAAKf,KAAhC;MACA,KAAKA,KAAL,GAAa;QACTC,KAAK,EAAE,EADE;QAETC,KAAK,EAAE,SAFE;QAGTC,QAAQ,EAAE;MAHD,CAAb;IAKC;;EAnBI;AAlBI,CAAf","names":["Store","name","data","eventColors","event","title","color","priority","computed","activeDayName","getters","activeDay","fullName","methods","eventColorClasses","eventColor","setEventColor","submitEvent","mutations","storeEvent"],"sourceRoot":"","sources":["/Users/isaak/Desktop/vuejs_udemy_deutsch/terminkalender/src/components/CalendarEntry.vue"],"sourcesContent":["<template>\n  <div id=\"calender-entry\">\n    <div class=\"card\">\n      <div class=\"card-header text-center\">\n        <h5>\n          Neuer Termin für: <strong>{{ activeDayName }}</strong>\n        </h5>\n      </div>\n      <div class=\"card-body\">\n        <input\n          type=\"text\"\n          class=\"form-control\"\n          placeholder=\"Neuer Eintrag\"\n          v-model=\"event.title\"\n        />\n        <select class=\"form-select mt-2\" v-model=\"event.priority\">\n          <option value=\"-1\">Hoch</option>\n          <option value=\"0\">Mittel</option>\n          <option value=\"1\">Tief</option>\n        </select>\n        <div class=\"text-center mt-3\">\n          <span\n            v-for=\"color in eventColors\"\n            :key=\"color\"\n            class=\"d-inline-block alert m-0 me-2 square\"\n            :class=\"eventColorClasses(color)\"\n            role=\"button\"\n            @click=\"setEventColor(color)\"\n          >\n          </span>\n        </div>\n        <hr />\n        <div class=\"d-grid gap-2\">\n          <button class=\"btn btn-primary\" @click=\"submitEvent()\">\n            Eintragen\n          </button>\n          <button class=\"btn btn-danger\">Inhalt löschen</button>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport Store from \"../store\";\n\nexport default {\n  name: \"CalendarEntry\",\n  data() {\n    return {\n      eventColors: [\"primary\", \"success\", \"info\", \"warning\", \"danger\"],\n      event: {\n        title: \"\",\n        color: \"primary\",\n        priority: 0,\n      },\n    };\n  },\n  computed: {\n    activeDayName() {\n      return Store.getters.activeDay().fullName;\n    },\n  },\n\n  methods: {\n    eventColorClasses(eventColor) {\n      return [\n        \"alert-\" + eventColor,\n        this.event.color === eventColor\n          ? \"border border-\" + this.event.color\n          : \"\",\n      ];\n    },\n    setEventColor(eventColor) {\n      this.event.color = eventColor;\n    },\n    submitEvent() {\n      Store.mutations.storeEvent(this.event);\n      this.event = {\n          title: \"\",\n          color: \"primary\",\n          priority: 0,\n        };\n      },\n    },\n};\n\n</script>\n\n<style scoped></style>\n"]},"metadata":{},"sourceType":"module"}