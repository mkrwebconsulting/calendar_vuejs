{"ast":null,"code":"import Store from \"../store\";\nexport default {\n  name: \"CalendarEvent\",\n  props: {\n    event: Object,\n    day: Object\n  },\n\n  data() {\n    return {\n      newEventTitle: \"\"\n    };\n  },\n\n  computed: {\n    priorityDisplayName() {\n      switch (this.event.priority) {\n        case 1:\n          return \"Niedrig\";\n\n        case 0:\n          return \"Mittel\";\n\n        case -1:\n          return \"Hoch\";\n      }\n\n      return \"Unbekannte Prio\";\n    },\n\n    alertColor() {\n      return \"alert-\" + this.event.color;\n    }\n\n  },\n  methods: {\n    deleteEvent() {\n      Store.mutations.deleteEvent(this.day.id, this.event.title);\n    },\n\n    editEvent() {\n      Store.mutations.editEvent(this.day.id, this.event.title);\n    },\n\n    setNewEventTitle(event) {\n      this.newEventTitle = event.target.value;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAgCA,OAAOA,KAAP,MAAkB,UAAlB;AAEA,eAAe;EACbC,IAAI,EAAE,eADO;EAEbC,KAAK,EAAE;IACLC,KAAK,EAAEC,MADF;IAELC,GAAG,EAAED;EAFA,CAFM;;EAMbE,IAAI,GAAE;IACJ,OAAO;MACLC,aAAa,EAAE;IADV,CAAP;EAGD,CAVY;;EAWbC,QAAQ,EAAE;IACRC,mBAAmB,GAAG;MACpB,QAAQ,KAAKN,KAAL,CAAWO,QAAnB;QACE,KAAK,CAAL;UACE,OAAO,SAAP;;QACF,KAAK,CAAL;UACE,OAAO,QAAP;;QACF,KAAK,CAAC,CAAN;UACE,OAAO,MAAP;MANJ;;MAQA,OAAO,iBAAP;IACD,CAXO;;IAYRC,UAAU,GAAG;MACX,OAAO,WAAW,KAAKR,KAAL,CAAWS,KAA7B;IACD;;EAdO,CAXG;EA2BbC,OAAO,EAAE;IACPC,WAAW,GAAG;MACZd,KAAK,CAACe,SAAN,CAAgBD,WAAhB,CAA4B,KAAKT,GAAL,CAASW,EAArC,EAAyC,KAAKb,KAAL,CAAWc,KAApD;IACD,CAHM;;IAIPC,SAAS,GAAG;MACVlB,KAAK,CAACe,SAAN,CAAgBG,SAAhB,CAA0B,KAAKb,GAAL,CAASW,EAAnC,EAAuC,KAAKb,KAAL,CAAWc,KAAlD;IACD,CANM;;IAOPE,gBAAgB,CAAChB,KAAD,EAAQ;MACtB,KAAKI,aAAL,GAAqBJ,KAAK,CAACiB,MAAN,CAAaC,KAAlC;IACD;;EATM;AA3BI,CAAf","names":["Store","name","props","event","Object","day","data","newEventTitle","computed","priorityDisplayName","priority","alertColor","color","methods","deleteEvent","mutations","id","title","editEvent","setNewEventTitle","target","value"],"sourceRoot":"","sources":["/Users/isaak/Desktop/vuejs_udemy_deutsch/terminkalender/src/components/CalendarEvent.vue"],"sourcesContent":["<template>\n  <div class=\"alert text-center\" :class=\"alertColor\">\n    <template v-if=\"!event.edit\">\n      <div>\n        <slot name=\"eventPriority\" :priorityDisplayName=\"priorityDisplayName\">\n          <strong>{{ priorityDisplayName }}</strong>\n        </slot>\n      </div>\n\n      <slot :event=\"event\">\n        <div>{{ event.title }}</div>\n      </slot>\n\n      <div>\n        <i class=\"fas fa-edit me-2\" role=\"button\" @click=\"editEvent()\"></i>\n        <i class=\"far fa-trash-alt\" role=\"button\" @click=\"deleteEvent()\"></i>\n      </div>\n    </template>\n    <template v-else>\n      <input\n        type=\"text\"\n        class=\"form-control\"\n        :placeholder=\"event.title\"\n        @input=\"setNewEventTitle($event)\"\n      />\n      <hr />\n      <i class=\"fas fa-check\" @click=\"updateEvent()\"></i>\n    </template>\n  </div>\n</template>\n\n<script>\nimport Store from \"../store\";\n\nexport default {\n  name: \"CalendarEvent\",\n  props: {\n    event: Object,\n    day: Object,\n  },\n  data(){\n    return {\n      newEventTitle: \"\",\n    };\n  },\n  computed: {\n    priorityDisplayName() {\n      switch (this.event.priority) {\n        case 1:\n          return \"Niedrig\";\n        case 0:\n          return \"Mittel\";\n        case -1:\n          return \"Hoch\";\n      }\n      return \"Unbekannte Prio\";\n    },\n    alertColor() {\n      return \"alert-\" + this.event.color;\n    },\n  },\n  methods: {\n    deleteEvent() {\n      Store.mutations.deleteEvent(this.day.id, this.event.title);\n    },\n    editEvent() {\n      Store.mutations.editEvent(this.day.id, this.event.title);\n    },\n    setNewEventTitle(event) {\n      this.newEventTitle = event.target.value;\n    },\n  },\n};\n</script>\n\n<style scoped></style>\n"]},"metadata":{},"sourceType":"module"}